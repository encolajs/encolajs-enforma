{
    "name": "@encolajs/formkit",
    "version": "0.1.0",
    "description": "Form",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.cjs.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "prebuild": "tsc --emitDeclarationOnly",
        "build": "rollup -c --bundleConfigAsCjs",
        "dev": "rollup -c -w --bundleConfigAsCjs",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --coverage --pool=forks",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
        "format": "prettier --write '{src,tests}/**/*.{js,ts,vue}'",
        "format:check": "prettier --check '{src,tests}/**/*.{js,ts,vue}'",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "type-check": "tsc --noEmit",
        "ci": "npm run format:check && npm run lint && npm run type-check && npm run test:coverage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/encolajs/encolajs-validator.git"
    },
    "keywords": [
        "typescript",
        "form",
        "forms",
        "validation",
        "ui",
        "json"
    ],
    "author": "Adrian <adrian@encolajs.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/encolajs/encolajs-validator/issues"
    },
    "homepage": "https://github.com/encolajs/encolajs-validator#readme",
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.0.0",
        "@testing-library/vue": "^8.1.0",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/coverage-v8": "^3.0.7",
        "@vue/test-utils": "^2.4.6",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^8.6.0",
        "globals": "^16.0.0",
        "jsdom": "^26.0.0",
        "prettier": "^2.8.4",
        "rollup": "^3.17.2",
        "rollup-plugin-dts": "^5.2.0",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5",
        "typescript-eslint": "^8.25.0",
        "vitest": "^3.0.8"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "dependencies": {
        "vue": "^3.5.13"
    }
}
