{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": true,
        "target": "es2018",
        "module": "esnext",
        "declaration": true,
        "declarationDir": "dist/dts",
        "noImplicitThis": false,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2018", "DOM", "DOM.Iterable"],
        "types": ["vite/client", "vitest/globals"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "test/**/*.ts",
        "test/**/*.vue",
        "src/**/*.d.ts",
        "test/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}